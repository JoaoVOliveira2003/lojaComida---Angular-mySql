<html>

<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
    </style>
</head>

<body>
    <h3 style="text-align:center;">Sistema de Manutenção Café</h3>
    <table>
        <tr>
            <th>Name: <%= name %></th>
            <th>Email: <%= email %></th>
        </tr>
        <tr>
            <th>Contact Number: <%= contactNumber %></th>
            <th>Payment Method: <%= paymentMethod %></th>
        </tr>
    </table>

    <h3>Product Details</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Sub Total</th>
        </tr>

        <% if (productDetails.length > 0) { %>
            <% productDetails.forEach(product => { %>
                <tr>
                    <td><%= product.product %></td>
                    <td><%= product.category || 'N/A' %></td>
                    <td><%= product.quantity %></td>
                    <td>R$ <%= product.price.toFixed(2) %></td>
                    <td>R$ <%= (product.quantity * product.price).toFixed(2) %></td>
                </tr>
            <% }); %>
        <% } %>
    </table>
    <h3>Total: R$ <%= totalAmount.toFixed(2) %></h3>
    <h3>Obrigado pela visita! Volte sempre!</h3>
</body>

</html>
